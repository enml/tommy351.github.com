<% if (post.link){ %>
  <% if (post.title){ %>
    <h1><a class="post-title" href="<%- post.link %>" target="_blank"><%= post.title %></a></h1>
  <% } else { %>
    <h1><a class="post-title" href="<%- post.link %>" target="_blank"><%= post.link %></a></h1>
  <% } %>
<% } else { %>
  <% if (index){ %>
    <h1><a class="post-title" href="<%- config.root %><%- post.path %>"><%= post.title %></a></h1>
  <% } else { %>
    <h1 class="post-title"><%= post.title %></h1>
  <% } %>
<% } %>