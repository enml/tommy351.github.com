<article class="<%= post.layout %>">
  <div class="outer">
    <div class="inner">
      <header class="post-header">
        <time datetime="<%= date_xml(post.date) %>" class="post-date-wrap">
          <a href="<%= config.root %><%= post.path %>" class="post-date"><%= date(post.date) %></a>
        </time>
        <%- partial('post/title') %>
      </header>
      <div class="post-entry">
        <% if (post.excerpt && index){ %>
          <%- post.excerpt %>
        <% } else { %>
          <%- post.content %>
        <% } %>
      </div>
      <footer class="post-footer-wrap">
        <div class="post-footer">
          <% if (index){ %>
            <% if (post.comments && config.disqus_shortname){ %>
              <a href="<%- post.permalink %>#disqus_thread" class="post-footer-link">Comments</a>
            <% } %>
            <% if (post.excerpt){ %>
              <a href="<%= config.root %><%= post.path %>#more" class="post-footer-link"><%= theme.excerpt_link %></a>
            <% } %>
          <% } else { %>
            <%- partial('post/category') %>
            <%- partial('post/tag') %>
          <% } %>
        </div>
      </footer>
    </div>
  </div>
</article>

<% if (!index && post.comments && config.disqus_shortname){ %>
  <section id="comments">
    <div class="outer">
      <div class="inner">
        <div id="disqus_thread">
          <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        </div>
      </div>
    </div>
  </section>
<% } %>