line-height = 1.6em

article
  margin: 50px 0

.post-content
  border: 1px solid color-border
  box-shadow: 0 0 8px color-border
  background: #fff
  padding: 20px 25px

.post-date-wrap
  padding-bottom: 8px
  display: block

.post-date
  color: color-grey
  text-decoration: none
  font-size: 0.9em
  font-family: font-title

.post-title
  color: color-default
  text-decoration: none
  font-size: 2em
  font-family: font-title
  line-height: 1.1

.post-entry
  line-height: line-height
  color: color-default
  p, ol, ul, dl, table, blockquote, iframe, .highlight
    margin: line-height 0
  h1
    font-size: 2em
  h2
    font-size: 1.5em
  h3
    font-size: 1.3em
  h1, h2, h3, h4, h5, h6
    line-height: 1em
    margin: 1em 0
    font-weight: bold
  a
    color: color-blue
    text-decoration: none
    &:hover
      text-decoration: underline
  strong
    font-weight: bold
  em
    font-style: italic
  ul, ol, dl
    margin-left: 20px
    ul, ol, dl
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dl
    list-style: square
  li
    p:first-child
      margin: 0
    table, blockquote, iframe, .highlight
      margin: 1em 0
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: 0 auto
  iframe
    border: none
  .video-container
    position relative
    padding-bottom 56.25%
    padding-top 30px
    height 0
    overflow hidden
    iframe, object, embed
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      margin-top 0

.post-more-link
  text-align: center
  text-decoration: none
  color: color-grey
  display: block
  background: #eee
  padding: 12px 20px
  margin: 0 15px
  border: 1px solid color-border
  box-shadow: 0 0 8px color-border
  &:hover
    color: color-blue